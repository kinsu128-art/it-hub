# Session secret (32+ characters random string)
SESSION_SECRET=your-secret-key-here

# Supabase configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Database URL (Connection Pooler)
# Format: postgresql://user.project-id:password@aws-region.pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://postgres.PROJECT_ID:PASSWORD@aws-1-ap-south-1.pooler.supabase.com:5432/postgres

# Default admin credentials (change in production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Upload file size limit (MB)
MAX_FILE_SIZE=10

# Pagination
PAGE_SIZE=20

# OpenRouter API Key (for PC image recognition)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key-here

# JWT Secret Key (for session management)
JWT_SECRET_KEY=your-jwt-secret-key-here

# App URL for API Referer header
NEXT_PUBLIC_APP_URL=http://localhost:3000
