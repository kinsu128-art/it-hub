# MSSQL Database Configuration (External Server)
# 외부 MSSQL 서버 연결 정보
DB_SERVER=192.168.1.11
DB_PORT=2433
DB_DATABASE=dk_it
DB_USER=dkenterb
DB_PASSWORD=Micro@4580

# Session Secret (IMPORTANT: Change this in production!)
# 프로덕션 환경에서는 반드시 강력한 랜덤 문자열로 변경하세요
# 생성 방법: openssl rand -base64 32
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARACTERS_LONG

# JWT Secret Key (IMPORTANT: Change this in production!)
# 프로덕션 환경에서는 반드시 강력한 랜덤 문자열로 변경하세요
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING

# Default Admin Credentials
# 첫 실행 시 생성되는 관리자 계정 정보 (보안을 위해 변경 권장)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Application Settings
# 파일 업로드 최대 크기 (MB)
MAX_FILE_SIZE=10
# 페이지당 표시 항목 수
PAGE_SIZE=20
# 애플리케이션 URL (서버 IP 또는 도메인으로 변경)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment
NODE_ENV=production

# OpenRouter API Key (선택사항 - PC 이미지 인식 기능용)
# OPENROUTER_API_KEY=your-openrouter-api-key-here
